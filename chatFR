<script type='text/javascript'>
	var initESW = function(gslbBaseURL) {
		embedded_svc.settings.displayHelpButton = true; //Ou faux
		embedded_svc.settings.language = 'FR'; //Par exemple, saisissez 'en' ou 'en-US'

		// Paramètres de Chat
		embedded_svc.settings.extraPrechatFormDetails = [{
			"label":"Prénom",
			"transcriptFields": ["FirstName__c"]
		},{
			"label":"Nom",
			"transcriptFields": ["LastName__c"]
		},{
			"label":"Numéro de commande VIR/DO",
			"transcriptFields": ["OrderNumber__c"]
		},{
			"label":"Adresse e-mail",
			"transcriptFields": ["Email__c"]
		},{
			"label":"Téléphone",
			"transcriptFields": ["Phone__c"]
		},{
			"label":"Code Postal",
			"transcriptFields": ["PostalCode__c"]
		}];

		embedded_svc.settings.enabledFeatures = ['LiveAgent'];
		embedded_svc.settings.entryFeature = 'LiveAgent';

		embedded_svc.init(
			'https://vir--copyprod.sandbox.my.salesforce.com',
			'https://vir--copyprod.sandbox.my.site.com/',
			gslbBaseURL,
			'00DAU0000029qCk',
			'VirBotAgent',
			{
				baseLiveAgentContentURL: 'https://c.la2s-core1.sfdc-urlt2q.salesforceliveagent.com/content',
				deploymentId: '5725J000000TYgz',
				buttonId: '5735J000000TYy4',
				baseLiveAgentURL: 'https://d.la2s-core1.sfdc-urlt2q.salesforceliveagent.com/chat',
				eswLiveAgentDevName: 'EmbeddedServiceLiveAgent_Parent04I5J000000PKgGUAW_17984a355c7',
				isOfflineSupportEnabled: false
			}
		);

		// Attente après l'initialisation pour garantir que le chat est complètement chargé
		setTimeout(function() {
			const headerTitle = document.querySelector('.embeddedServiceSidebarHeader .sidebarHeaderTitle');
			if (headerTitle && headerTitle.textContent.trim() === 'Chat') {
				headerTitle.textContent = 'JP Bot';
				console.log('✅ Titre du chat changé en "JP Bot"');
			} else {
				console.warn('❌ Titre non trouvé dans le DOM.');
			}
		}, 500); // 500ms pour laisser le chat se charger (ajuste si nécessaire)
	};

	if (!window.embedded_svc) {
		var s = document.createElement('script');
		s.setAttribute('src', 'https://vir--copyprod.sandbox.my.salesforce.com/embeddedservice/5.0/esw.min.js');
		s.onload = function() {
			initESW(null);
		};
		document.body.appendChild(s);
	} else {
		initESW('https://service.force.com');
	}
</script>
